<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.grietenenknapen.sithandroid.ui.views.SithStarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@id/toolbar"
            android:background="@drawable/md_transparent"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarBarStyle"
            app:titleTextColor="@color/colorPrimary">

            <TextView
                android:id="@+id/title_server_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/server_list_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:visibility="gone"/>

        </android.support.v7.widget.Toolbar>

        <android.support.v4.widget.DrawerLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar">

            <RelativeLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="100dp">

                    <TextView
                        android:id="@+id/menuStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:clickable="true"
                        android:text="@string/menu_start_game"
                        android:textAppearance="@style/TextAppearance.Big"
                        android:textColor="@color/color_yellow_selector"/>

                    <TextView
                        android:id="@+id/menuResume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:clickable="true"
                        android:text="@string/menu_resume_game"
                        android:textAppearance="@style/TextAppearance.Big"
                        android:textColor="@color/color_yellow_selector"
                        android:visibility="gone"/>
                </LinearLayout>

                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="@dimen/margin_default"
                    app:menu_colorNormal="@color/colorPrimary"
                    app:menu_colorPressed="@color/colorPrimaryDark"
                    app:menu_colorRipple="@color/colorPrimaryDark"
                    app:menu_fab_size="normal"
                    app:menu_icon="@drawable/menu_darth_vader"
                    tools:ignore="RtlHardcoded">

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/menuPlayers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_person"
                        app:fab_colorNormal="@color/lightBlue"
                        app:fab_colorPressed="@color/blue"
                        app:fab_colorRipple="@color/blue"
                        app:fab_label="@string/menu_players"
                        app:fab_size="mini"/>


                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/menuSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_settings"
                        app:fab_colorNormal="@color/lightBlue"
                        app:fab_colorPressed="@color/blue"
                        app:fab_colorRipple="@color/blue"
                        app:fab_label="@string/menu_settings"
                        app:fab_size="mini"/>
                </com.github.clans.fab.FloatingActionMenu>

            </RelativeLayout>

            <fragment
                android:id="@+id/left_drawer"
                android:name="com.grietenenknapen.sithandroid.ui.fragments.ServerListFragment"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"/>

        </android.support.v4.widget.DrawerLayout>

    </RelativeLayout>

</RelativeLayout>


