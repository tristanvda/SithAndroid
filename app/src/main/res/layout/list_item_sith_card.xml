<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/card_size"
    android:layout_height="@dimen/card_size"
    android:background="@drawable/card_shape_background">

    <com.grietenenknapen.sithandroid.ui.views.RoundedFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_shape_selector">

            <View
                android:id="@+id/centerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true" />

            <View
                android:id="@+id/sithCardLeftColorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/centerView"
                tools:ignore="RtlHardcoded" />

            <View
                android:id="@+id/sithCardRightColorView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/centerView"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/sithCardImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </com.grietenenknapen.sithandroid.ui.views.RoundedFrameLayout>

</FrameLayout>